<div class="banner">
    <div class="banner-siema  swiper-container">
        <div class="swiper-wrapper">
            {{#each this}}
            <div class="banner-slide swiper-slide" data-title="{{title}}" data-swiper-autoplay="2000">
                <div class="slide-width" data-title="{{title}}">
                    <div class="banner-content" data-title="{{title}}">
                        <span class="banner-title_text" data-title="{{title}}">{{title}}</span>
                        <div class="banner-price-block" data-title="{{title}}">
                            <span class="banner-price_currency" data-title="{{title}}">â‚¬</span>
                            <span class="banner-price" data-title="{{title}}">{{price}}</span>
                        </div>
                    </div>
                    <img class="banner-image" src="{{imageUrl}}" alt="{{title}}" data-title="{{title}}" />
                </div>
            </div>
            {{/each}}
        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>